@model GameBoard.Models.GameEvent.GameEventViewModel

<article class="description-tab">
    <h1 class="name" title="@Model.Name">@Model.Name</h1>
    <section class="description">
        <h3 class="name">@Html.DisplayNameFor(m => m.DescriptionTab.Description)</h3>
        <p class="description-text text-body border-full">@Model.DescriptionTab.Description</p>
    </section>
    @if (Model.IsCreator)
    {
        <section class="control-panel">
            <form asp-controller="DescriptionTab" asp-action="EditDescriptionTab" method="get">
                <input type="hidden" asp-for="Id" />
                <button class="btn btn-dark" type="submit">Edit</button>
            </form>
        </section>
    }
    else if (!Model.IsInvitePending)
    {
        <section class="control-panel">
            <form asp-controller="GameEventParticipation" asp-action="ExitGameEvent" method="get">
                <input type="hidden" asp-for="Id" />
                <button class="btn btn-danger" type="submit">Exit</button>
            </form>
        </section>
    }
</article>