@model GameBoard.Models.GameEventInviteForm.GameEventInviteFormViewModel

@{ var buttonId = Guid.NewGuid();}

<form class="user-card-sub-component game-event-invite-form" asp-action="SendGameEventInvite" asp-controller="GameEventParticipation"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-success="gameEventInviteFormPopoverGenerator.generateSuccessPopover(document.querySelector('#game-event-invite-@buttonId'), xhr)"
      data-ajax-failure="gameEventInviteFormPopoverGenerator.generateErrorPopover(document.querySelector('#game-event-invite-@buttonId'), xhr)">
    <input type="hidden" asp-for="@Model.GameEventId"/>
    <input type="hidden" asp-for="@Model.UserName"/>
    <button id="game-event-invite-@buttonId" type="submit" class="btn btn-dark" data-toggle="popover" data-placement="right"
            title="Invite @Model.UserName to the @Model.GameEventName event">
        <i class="fa fa-send"></i>
    </button>
</form>