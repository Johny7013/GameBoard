@model GameBoard.Models.GameEvent.RemoveFromGameEventViewModel

@*TODO: remove-from-game-event-form*@
<form class="game-event-invite-form" asp-action="RemoveFromGameEvent" asp-controller="GameEventParticipation"
      data-ajax="true" data-ajax-method="Get"
      data-ajax-success="removeFromGameEventFormPopoverGenerator.generateSuccessPopover(document.querySelector('#remove-from-game-event-@Model.UserName'), xhr)"
      data-ajax-failure="removeFromGameEventFormPopoverGenerator.generateErrorPopover(document.querySelector('#remove-from-game-event-@Model.UserName'), xhr)">
    <input type="hidden" asp-for="@Model.GameEventId" />
    <input type="hidden" asp-for="@Model.UserName" />
    <button id="remove-from-game-event-@Model.UserName" type="submit" class="btn btn-dark" data-toggle="popover" data-placement="right"
            title="Remove @Model.UserName from the @Model.GameEventId event">
        <i class="fa fa-send"></i>
    </button>
</form>
