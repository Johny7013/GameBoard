@model GameBoard.Models.DescriptionTab.EditDescriptionTabViewModel

<form asp-action="EditDescriptionTab" asp-controller="DescriptionTab">
    <h1 style="text-align: center">Edit description for your event</h1>
    <input type="hidden" asp-for="GameEventId" value="@Model.GameEventId"/>
    <input type="hidden" asp-for="Id" value="@Model.Id"/>
    <div class="col form-group">
        <label asp-for="Description"></label>
        <textarea id="description-text-area" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark">
        Save
    </button>
</form>