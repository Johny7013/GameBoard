@page
@using Utilities
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">

        <div>
            <label>Avatar</label>
            <div class="media row">
                <img src="https://www.gravatar.com/avatar/@GravatarEmailHasher.CalculateGravatarEmailHash(Model.Input.Email)"
                     class="gravatar-lg rounded align-self-center col-auto"
                     alt="gravatar"/>
                <div class="media-body col-auto">
                    <p>GameBoard uses the Gravatar service (Globally Recognized Avatar) to provide user profile pictures.</p>
                    <p>You can set up your gravatar at <a href="https://gravatar.com/">the Gravatar website</a>, using the same email you registered with.</p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" disabled/>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" disabled/>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}